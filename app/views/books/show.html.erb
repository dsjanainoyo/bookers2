<div class="container">
    <div class="row">
        
        <%=render 'users/useinfo', book: @book, user: @books.user,users: @user%>
        
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%=link_to user_path(@books.user) do%>
                            <%=image_tag @books.user.get_profile_image(100,100) %><br/>
                              <%=@books.user.name%>
                            <%end%>
                        </td>
                        <td>
                            <%=link_to @books.title,book_path(@books)%>
                        </td>
                        <td>
                            <%= @books.body%>
                        </td>
                        
                        <%if @books.user == current_user%>
                        <td>
                            <%=link_to "Edit",edit_book_path(@books),class:"btn btn-sm btn-success"%>
                        </td>
                        <td>
                            <%=link_to "Destroy",book_path(@books.id),method: :delete,class:"btn btn-sm btn-danger","data-confirm"=>"本当に消しますか？"%>
                        </td>
                        <%end%>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>