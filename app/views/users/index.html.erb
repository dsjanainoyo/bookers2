<div class="container px-5 px-sm-0">
  <div class="row">
      
    <%= render 'useinfo',book: @book%>

    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>image</th>
                    <th>name</th>
                    <th clspan="3"></th>
                </tr>
            </thead>
            
            <tbody>
            <%@users.each do |user|%>
              <tr>
                  <td><%=image_tag @user.image%></td>
                  
                  <td><%current_user.name%></td>
                  <td><%=link_to "Show",user_path(:users_id)%></td>
              </tr>
            <%end%>
            </tbody>

        </table>
    </div>
  </div>
</div>
