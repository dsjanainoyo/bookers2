
    <div class="col-md-3">
      <h1>User info</h1>
         <% if user.image.attached?%>
            <%=image_tag user.image,size:"100x100"%>
          <%else%>
            <%=image_tag 'no_image',size:"100x100"%>
          <%end%>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%=current_user.name%></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%=current_user.introduction%></th>
              </tr>
            </tbody>
          </table>
          
          
          <div class="row">
            <%=link_to edit_user_path(current_user),class:"btn btn-outline-secondary btn-block"%> 
          </div>
          
        <h2 class="mt-3">New Book</h2>
        <%= form_with(model: book, local: true) do |f| %>
          <div class="form-group">
          <h4>Title</h4>
          <%=f.text_field :title%>
          </div>
         <div class="form-group">
         <h4>Opinion</h4>
         <%=f.text_area :body%>
         </div>
         <div class="form-group">
         <%=f.submit 'Create Book',class:"btn btn-success"%>
         </div>
        <%end%>
    </div>

