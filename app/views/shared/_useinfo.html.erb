<h1>User info</h1>
<% if user.image.attached?%>
  <%=image_tag user.image,size:"100x100"%>
  <%else%>
  <%=image_tag 'no_image',size:'100x100'%>
  <%end%>
  <%=@user.name%>
  <%=@user.introduction%>

<h1>New Book</h1>
<%=form_with model: @book do |f|%>
  <h4>Title</h4>
    <%=f.text.field :title%>
  <h4>Opinion</h4>
    <%=f.text_area :opinion%>
  <%=f.submit 'Create Book'%>
<%end%>